<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="60 seconds">
  <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
  <include resource="org/springframework/boot/logging/logback/console-appender.xml"/>
  <include resource="org/springframework/boot/logging/logback/file-appender.xml"/>

  <!-- 메인 애플리케이션 로그(dev/prod) -->
  <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>/var/log/spring/solid-connection-server.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>/var/log/spring/solid-connection-server.%d{yyyy-MM-dd}.log</fileNamePattern>
      <maxHistory>30</maxHistory>
    </rollingPolicy>
    <encoder>
      <!-- Loki에서 읽기 좋은 logfmt 형식 (간단한 key=value 스타일) -->
      <pattern>timestamp=%d{yyyy-MM-dd'T'HH:mm:ss.SSS} level=%-5level thread=%thread logger=%logger{36} message=%msg%n</pattern>
    </encoder>
  </appender>

  <!-- SQL 로그(dev/prod) -->
  <appender name="FILE_SQL" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>/var/log/spring/solid-connection-sql.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>/var/log/spring/solid-connection-sql.%d{yyyy-MM-dd}.log</fileNamePattern>
      <maxHistory>30</maxHistory>
    </rollingPolicy>
    <encoder>
      <pattern>timestamp=%d{yyyy-MM-dd'T'HH:mm:ss.SSS} level=%-5level thread=%thread logger=%logger{36} message=%msg%n</pattern>
    </encoder>
  </appender>

  <appender name="FILE_DBPERF" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>/var/log/spring/solid-connection-dbperf.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>/var/log/spring/solid-connection-dbperf.%d{yyyy-MM-dd}.log</fileNamePattern>
      <maxHistory>30</maxHistory>
    </rollingPolicy>
    <encoder>
      <!-- logfmt + traceId -->
      <pattern>timestamp=%d{yyyy-MM-dd'T'HH:mm:ss.SSS} level=%-5level trace=%X{traceId} thread=%thread logger=%logger{36} message=%msg%n</pattern>
    </encoder>
  </appender>

  <!-- local용 메인 파일 appender -->
  <appender name="FILE_LOCAL" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>logs/solid-connection-server.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>logs/solid-connection-server.%d{yyyy-MM-dd}.log</fileNamePattern>
      <maxHistory>7</maxHistory>
    </rollingPolicy>
    <encoder>
      <pattern>timestamp=%d{yyyy-MM-dd'T'HH:mm:ss.SSS} level=%-5level trace=%X{traceId} thread=%thread logger=%logger{36} message=%msg%n</pattern>
    </encoder>
  </appender>

  <!-- local용 SQL 파일 appender -->
  <appender name="FILE_LOCAL_SQL" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>logs/solid-connection-sql.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>logs/solid-connection-sql.%d{yyyy-MM-dd}.log</fileNamePattern>
      <maxHistory>7</maxHistory>
    </rollingPolicy>
    <encoder>
      <pattern>timestamp=%d{yyyy-MM-dd'T'HH:mm:ss.SSS} level=%-5level trace=%X{traceId} thread=%thread logger=%logger{36} message=%msg%n</pattern>
    </encoder>
  </appender>

  <root level="INFO">
    <appender-ref ref="CONSOLE"/>
  </root>

  <appender name="FILE_LOCAL_DBPERF" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>logs/solid-connection-dbperf.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>logs/solid-connection-dbperf.%d{yyyy-MM-dd}.log</fileNamePattern>
      <maxHistory>7</maxHistory>
    </rollingPolicy>
    <encoder>
      <pattern>timestamp=%d{yyyy-MM-dd'T'HH:mm:ss.SSS} level=%-5level trace=%X{traceId} thread=%thread logger=%logger{36} message=%msg%n</pattern>
    </encoder>
  </appender>

  <!-- dev/prod: 애플리케이션 로그는 FILE, 쿼리 로그는 별도 FILE_SQL로 분리 -->
  <springProfile name="prod,dev">
    <root level="INFO">
      <appender-ref ref="FILE"/>
    </root>

    <logger name="org.hibernate.SQL" level="DEBUG" additivity="false">
      <appender-ref ref="FILE_SQL"/>
    </logger>
    <logger name="org.hibernate.orm.jdbc.bind" level="TRACE" additivity="false">
      <appender-ref ref="FILE_SQL"/>
    </logger>
  </springProfile>

  <!-- local: 콘솔은 전체 출력, 파일은 쿼리만 남김 -->
  <springProfile name="local">
    <root level="INFO">
      <appender-ref ref="CONSOLE"/>
      <!--            <appender-ref ref="FILE_LOCAL"/> &lt;!&ndash; ← 이 줄 추가 &ndash;&gt;-->
    </root>

    <logger name="API_PERF" level="INFO" additivity="false">
      <appender-ref ref="FILE_LOCAL"/>
    </logger>

    <!-- 쿼리 로그만 파일+콘솔에 출력 -->
    <logger name="org.hibernate.SQL" level="DEBUG" additivity="false">
      <appender-ref ref="FILE_LOCAL_SQL"/>
      <appender-ref ref="CONSOLE"/>
    </logger>
    <logger name="org.hibernate.orm.jdbc.bind" level="TRACE" additivity="false">
      <appender-ref ref="FILE_LOCAL_SQL"/>
      <appender-ref ref="CONSOLE"/>
    </logger>

    <logger name="DB_PERF" level="INFO" additivity="false">
      <appender-ref ref="FILE_LOCAL_DBPERF"/>
      <appender-ref ref="CONSOLE"/>
    </logger>
  </springProfile>
</configuration>